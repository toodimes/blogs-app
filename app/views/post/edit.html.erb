<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Your post has not been published yet!</h1>
      <%= form_tag "/post/#{@blog_post.id}", method: :patch do %>
        <input type="text" name="title" value="<%= @blog_post.title %>">
        <textarea name="content" cols="30" rows="10"><%= @blog_post.content %></textarea>
        <input type="submit" value="Publish!">
      <% end %>
    </div>
  </div>
</div>