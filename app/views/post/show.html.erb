<section id="abovecontent" class="dark_section bg_image">
  <div class="container"><div class="row">
    <div class="block col-sm-12">
      <ul class="breadcrumb">
        <li><a href="/" class="pathway"><i class="rt-icon-home"></i></a></li>
        <li><span>Blog Post #<%= @blog_post.id %></span></li>
      </ul>
    </div>
  </div></div>
</section>

<section id="middle" class="darkgrey_section last_content_section">
  <div class="container">
    <div class="row blog-single">

      <div class="col-sm-9">
        <div class="content-area" id="primary">
          <div role="main" class="site-content" id="content">
            <article class="post type-post">
              <header class="entry-header">
                <h1 class="entry-title"><%= @blog_post.title %></h1>
<!--                 <div class="entry-thumbnail">
                  <img alt="" src="example/blog-post.jpg">
                </div> -->
                <div class="entry-meta">
                  By
                  <span class="author vcard">
                    <a rel="author" href="#" class="url fn n"><%= @blog_post.user.name %></a>
                  </span>
                  <span class="categories-links">
                    In
                    <a rel="category" href="#">Graphic Design</a>, 
                    <a rel="category" href="#">Photography</a>
                  </span>
                  <span class="date">
                    Posted
                    <span class="entry-date"><%= @blog_post.created_at.strftime("%A, %b %d") %></span>
                  </span>
                  <span class="comments-link">
                    <a href="#"><%= pluralize(@blog_post.comments.count, "comment") %></a>
                  </span>
                </div>
                <!-- .entry-meta --> 
              </header>
              <!-- .entry-header -->
            </article>
            <!-- article-article -->

            <!-- Blog Post Content -->
            <!-- Need to figure out a way to format later -->
            <div class="entry-content">
              <%= @blog_post.content %>
            </div>

            <!--Begin Comments Section-->
            <div class="comments-area" id="comments">
            <% if @blog_post.comments.count < 1 %>
              <h2 class="comments-title">Be the first to comment!</h2>
            <% else %>
              <h2 class="comments-title">Showing <%= pluralize(@blog_post.comments.count, "comment") %> </h2>
            <% end %>
              <ol class="comment-list">
              <%# if @blog_post.comments.count >= 1 %>
                <% @blog_post.comments.all.each do |comment| %>
                <li class="comment even thread-even depth-1 parent">
                  <article class="comment-body">
                    <footer class="comment-meta">
                      <div class="comment-author vcard"><img class="avatar" src="<%= comment.user.avatars.last.url %>" alt=""><a class="author_url" rel="external nofollow" href=""><%= comment.user.name %></a></div>
                      <!-- .comment-author -->
                      <div class="comment-metadata">
                        <span><%= comment.created_at.strftime("%b %e, %l:%M %p") %></span>
                      </div>
                      <!-- <div class="reply"> <a href="#" class="comment-reply-link">Reply</a> </div> -->
                      <!-- .reply --> 
                      <!-- .comment-metadata --> 
                    </footer>
                    <!-- .comment-meta -->
                    <div class="comment-content">
                      <p><%= comment.content %></p>
                    </div>
                    <!-- .comment-content -->
                  </article>
                  <!-- .comment-body -->
                <% end %>
              <%# else %>
<!--                 <div class="comments-area">
                  <h2>Be the first to comment!</h2>
                </div> -->
              <%# end %>

                

          <% if !current_user %>
              <h2 class="comments-title">You must be signed in to comment</h2>
          <% else %>
              <div class="comment-respond" id="respond">
                <h3 class="comment-reply-title" id="reply-title">Leave a Comment</h3>
              <%= form_tag "/comments", method: :post do %>
                <form class="comment-form" id="commentform">
                <input hidden type="text" name="post_id" value="<%= @blog_post.id %>">
                  <p class="comment-form-comment">
                    <label for="comment">Comment</label>
                    <textarea aria-required="true" rows="8" cols="45" name="content" id="comment" class="form-control" placeholder="Comment"></textarea>
                  </p>
                  <p class="form-submit">
                    <input type="submit" value="Leave a Comment" id="submit" name="submit" class="theme_btn">
                  </p>
                </form>
              <% end %>
              </div>
              <!-- #respond --> 
            <% end %>

            </div>
            <!-- #comments --> 

